<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.masterprogrammer.enigmasimulator.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:orientation="horizontal"
        android:background="@drawable/top_buttons"
        >
        <Button
            android:id="@+id/b_rotor3_auswahl"
            android:text="@string/rotor_auswahl_3"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="22sp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/transparent"

            />
        <Button
            android:id="@+id/b_rotor2_auswahl"
            android:text="@string/rotor_auswahl_2"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="125sp"
            android:layout_marginTop="22sp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/b_rotor1_auswahl"
            android:text="@string/rotor_auswahl_1"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="125sp"
            android:layout_marginTop="22sp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:background="@drawable/kabelsalat">
        <LinearLayout
            android:layout_width="180sp"
            android:layout_height="380sp"
            android:background="@drawable/side_button">
            <Button
                android:id="@+id/b_reflektor"
                android:layout_width="100sp"
                android:layout_height="130sp"
                android:text="@string/reklektor_auswahl"
                android:background="@android:color/transparent"
                android:layout_marginTop="120sp"
                android:layout_marginLeft="35sp"
                android:textSize="15sp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="400sp"
            android:layout_height="330sp"
            android:orientation="vertical"
            android:background="@drawable/mainboard"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:orientation="horizontal"
                android:paddingLeft="25sp"
                android:paddingTop="20sp"

                >
                <TextView
                    android:id="@+id/tv_rotor_text_anzeige3"
                    android:layout_width="78sp"
                    android:layout_height="78sp"
                    android:text="@string/rotor_3"
                    android:textSize="25sp"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/tv_rotor_text_anzeige2"
                    android:layout_width="78sp"
                    android:layout_height="78sp"
                    android:text="@string/rotor_2"
                    android:layout_marginLeft="70sp"
                    android:textSize="25sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_rotor_text_anzeige1"
                    android:layout_width="78sp"
                    android:layout_height="78sp"
                    android:text="@string/rotor_1"
                    android:layout_marginLeft="70sp"
                    android:textSize="25sp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210sp"
                android:orientation="horizontal"

                android:layout_marginTop="1sp"
                android:paddingTop="120sp"
                >
                <Button
                    android:id="@+id/b_rotor_counter3"
                    android:layout_width="80sp"
                    android:layout_height="80sp"

                    android:background="@android:color/transparent"
                    android:layout_marginLeft="20sp"
                    />
                <Button
                    android:id="@+id/b_rotor_counter2"
                    android:layout_width="80sp"
                    android:layout_height="80sp"

                    android:background="@android:color/transparent"
                    android:layout_marginLeft="70sp"
                    />
                <Button
                    android:id="@+id/b_rotor_counter1"
                    android:layout_width="80sp"
                    android:layout_height="80sp"

                    android:background="@android:color/transparent"
                    android:layout_marginLeft="60sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/tv_code_ausgabe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ausgabe_anfangs_text" />

        <EditText
            android:id="@+id/et_code_eingabe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/b_umwandeln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/umwandeln" />
    </LinearLayout>


</LinearLayout>
